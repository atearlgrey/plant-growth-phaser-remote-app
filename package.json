{
  "name": "phaser3-parcel-template",
  "version": "1.0.0",
  "description": "A typescript template project for Phaser 3 using Parceljs",
  "scripts": {
    "clean": "rimraf dist",
    "start:dev": "webpack serve --config webpack.standalone.config.js",
    "start:remote": "webpack serve --config webpack.remote.config.js",
    "build:standalone": "webpack --config webpack.standalone.config.js",
    "build:remote": "webpack --config webpack.remote.config.js",
    "build:dev": "npm run clean && npm run build:standalone && npm run build:remote",
    "build:fat": "npm run clean && npm run build:standalone && npm run build:remote",
    "build:uat": "npm run clean && npm run build:standalone && npm run build:remote",
    "build:prod": "webpack --config webpack.remote.prod.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
  },
  "author": "supertommy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ourcade/phaser3-parcel-template.git"
  },
  "homepage": "https://github.com/ourcade/phaser3-parcel-template",
  "devDependencies": {
    "@angular-architects/module-federation": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^6.8.0",
    "html-webpack-plugin": "^5.6.4",
    "minimist": ">=1.2.2",
    "rimraf": "^5.0.10",
    "ts-loader": "^9.5.4",
    "typescript": "^3.9.10",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "phaser": "^3.55.2"
  },
  "parcelCleanPaths": [
    "dist"
  ],
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "public",
        "watcherGlob": "**/*"
      }
    ]
  }
}
